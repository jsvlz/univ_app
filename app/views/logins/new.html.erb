<div class="container">
  <div class="row center sign-up-form">
    <div class=" col s12 m12 l12">
      <div class="card-panel">
        <div class="row">
          <h3 align="center">Log in</h3>
          <%= form_for(:logins, :html => {class: "col s12", role: "form"}) do |f| %>
            <form class="col s12">
              <div class="row">
                <div class="input-field col s12">
                  <i class="material-icons prefix">email</i>
                  <%= f.text_field :email, placeholder: "" %>
                  <label for="icon_prefix">Email Address</label>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12">
                  <i class="material-icons prefix">smoking_rooms</i>
                  <%= f.password_field :password, placeholder: "" %>
                  <label for="icon_prefix">Password</label>
                </div>
              </div>
              <div class = 'form-group'>
                <div class = 'col-sm-offset-2 col-sm-10'>
                  <%= f.submit "Log in", class: "btn btin-primary btn-medium" %><br>
                </div>
              </div>
            </form>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
