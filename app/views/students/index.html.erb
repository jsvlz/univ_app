<h1 align="center">All students</h1>
<div class="row">
  <% @students.each do |f| %>

    <div class="col s6 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class = "card-title">
            Name: <%= f.name %>
          </span>
          <p>Email: <%= f.email %></p>
          <p>Course Enrollments: None</p>
        </div>
        <div class="card-action">
          <%= link_to "VIEW PROFILE", student_path(f) %>
        </div>
      </div>
    </div>

  <% end %>
</div>
