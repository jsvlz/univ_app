<div class="row sign-up-form">
  <div class="col s6 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class = "card-title">
          Name: <%= @student.name %>
        </span>
        <p>Email: <%= @student.email %></p>
        <p>
          Course Enrollments:
          <% if @student.courses.empty? %>
            None
          <% else %>
            <% @student.courses.each do |f| %>
              <ul>
                <li><%= link_to f.name, course_path(f) %></li>
              </ul>
            <% end %>
          <% end %>
        </p>
      </div>
    </div>
    <% if logged_in? && current_user == @student%>
    <%= link_to '<i class="material-icons left">edit</i>EDIT PROFILE'.html_safe, edit_student_path(@student), class: "waves-effect waves-light btn-large" %>
    <% end %>
  </div>
</div>
